<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>
            <form id="loginForm">
                <div class="mb-3">
                    <label for="usuario" class="form-label">Usuário</label>
                    <input type="text" id="user" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" id="pass" class="form-control" required>
                </div>
                <div id="messageSuccess" class="alert alert-success" style="display: none;"></div>
                <div id="messageError" class="alert alert-danger" style="display: none;"></div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </form>
            <p class="mt-3 text-center">Não tem uma conta? <a href="/register">Registre-se</a></p>
        </div>
    </div>
</div>
<script src="functions.js"></script>
<script src="login.js"></script>